<h1>Welcome to your Car Dealership</h1>
<h3>Here's the cars we have available at the moment</h3>
<ul>
        @if (Cars.Count != 0)
        {
          @foreach (Car cars in Model)
          {
              <li>@cars.GetMakeModel()</li>
          }
        }  else {
          <p>You have no cars in the lot</p>
            }
</ul>
<a href="/newCar">Click here to add a new car to the lot</a>
